{% extends "layouts/base.twig" %}

{% block content %}
<section class="section">
    <div class="container">

        <!-- Info del artículo -->
        <div class="box">
            <h1 class="title">{{ articulo.titulo|e }}</h1>
            <p><strong>Resumen:</strong> {{ articulo.resumen|e }}</p>
            <p><strong>Fecha de envío:</strong> {{ articulo.fecha_envio|date('d-m-Y') }}</p>
        </div>

        <!-- Tabla de revisores -->
        <h2 class="subtitle">Revisores sugeridos por tópicos</h2>
        <table class="table is-fullwidth is-bordered is-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Especialidades coincidentes</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                {% for rev in revisores %}
                    <tr>
                        <!-- Info de los revisores + boton de asignar -->
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="has-text-centered">No se encontraron revisores compatibles.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</section>
{% endblock %}
