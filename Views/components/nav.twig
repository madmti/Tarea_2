<nav class="navbar is-light" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <strong>GESCON</strong>
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="main-navbar">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="main-navbar" class="navbar-menu">

        <div class="navbar-start">
            {% if user and user.tipo == 'ADM' %}
                {% include 'components/user_links/admin.twig' %}
            {% elseif user and user.tipo == 'AUT' %}
                {% include 'components/user_links/autor.twig' %}
            {% elseif user and user.tipo == 'REV' %}
                {% include 'components/user_links/revisor.twig' %}
            {% endif %}
            <a class="navbar-item" href="/mi_cuenta">Cuenta</a>
        </div>

        <div id="temp-alert" class="navbar-item is-expanded">
        {% if error %}
            <div class="notification is-danger has-text-centered mx-auto py-2 px-4" style="max-width: 400px;">
                <strong>{{ error|e }}</strong>
            </div>
        {% endif %}
        {% if info %}
            <div class="notification is-info has-text-centered mx-auto py-2 px-4" style="max-width: 400px;">
                <strong>{{ info|e }}</strong>
            </div>
        {% endif %}
        </div>

        {% if not on_log_reg %}
        <div class="navbar-end">
            {% if user %}
                <div class="navbar-item">
                    <span class="has-text-weight-bold">Bienvenido, </span>
                    <strong class="has-text-primary">{{ user.nombre|e }}</strong>
                </div>
                <div class="navbar-item">
                    <a class="button is-light" href="/logout">Cerrar sesión</a>
                </div>
            {% else %}
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary" href="/registro">Registrarse</a>
                        <a class="button is-light" href="/login">Iniciar sesión</a>
                    </div>
                </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
